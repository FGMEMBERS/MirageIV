<!-- Mirage IV            : Flavien BLANC / BARANGER Emmanuel (2010) 

     Sources              : http://en.wikipedia.org/wiki/Dassault_Mirage_IV

     Envergure            :    11.85 m       ( 38 ft 10.5 in)
     Longueur             :    23.49 m       ( 77 ft 01.0 in)
     Hauteur              :     5.40 m       ( 17 ft  8.5 in)
     Masse a vide         :    14500 kg      ( 31967 lb)
     Moteur               : 2 SNECMA Atar 9K-50 turbojets (11023 lbf each - afterburner 15873 lbf each)
     Vitesse max          : Mach 2.2 (2340 km/h, 1264 knots) at 13125 m (40000 ft)
-->


<airplane mass="31967">

  <!--
  La vitesse d'approche est d'environ 260 km/h (140 kts).
      Pour la phase d'approche, le FDM tient compte des parametres suivants:
      - puissance à 25%
      - pas de PC
      - volets sortis
      - train sorti (evident non ?)
      - aérofrein sorti
  -->
  <approach speed="140 " aoa="3" fuel-fraction="0.3">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[0]/reheat" value="0"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="0.4"/>
    <control-setting axis="/controls/engines/engine[1]/reheat" value="0"/>
    <control-setting axis="/controls/gear/gear-down" value="1"/>
    <control-setting axis="/controls/flight/speedbrake" value="1"/>
  </approach>

  <!--
  Vitesse de croisière environ 1800 km/h (971 kts).
  -->
  <cruise speed="971" alt="40000">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/reheat" value="0"/>
    <control-setting axis="/controls/engines/engine[1]/throttle" value="1.0"/>
    <control-setting axis="/controls/engines/engine[1]/reheat" value="0"/>
    <control-setting axis="/controls/gear/gear-down" value="0"/>
    <control-setting axis="/controls/flight/speedbrake" value="0"/>
  </cruise>

  <cockpit x="5.474" y="0.0" z="-0.298"/>

  <!-- Fuselage -->
  <fuselage ax="7.331" ay="0" az="-0.625" bx="-10.556" by="0" bz="-0.330" width="1.3" taper="0.6" midpoint="0.4" idrag="1" cx="1.3" cy="1.05"/>

  <!-- Noze -->
  <fuselage ax="9.536" ay="0" az="-0.743" bx="  7.348" by="0" bz="-0.621" width="0.8" taper="0.1" midpoint="1" idrag="1" cx="1.3" cy="1.05"/>

  <!-- Tank left
  <fuselage ax="0.228" ay=" 3.724" az="-1.702" bx="-7.833" by=" 3.724" bz="-1.447" width="0.6" taper="0.70" midpoint="0.5" idrag="1" cx="1.3" cy="1.05"/>
 -->
  <!-- Tank right
  <fuselage ax="0.228" ay="-3.724" az="-1.702" bx="-7.833" by="-3.724" bz="-1.447" width="0.6" taper="0.70" midpoint="0.5" idrag="1" cx="1.3" cy="1.05"/>
 -->
  <wing x="-4.012" y="1.236" z="-0.726"
        chord="9.665"
        length="6"
        taper="0.15"
        sweep="40"
        camber="0.01">
        <stall aoa="18" width="2" peak="1.3" />
        <flap0 start="0.023" end="0.572" lift="1.3" drag="1.4"/>
        <spoiler start="0" end="0.9" lift="1" drag="7"/>

        <control-input axis="/controls/flight/elevator" control="FLAP0"/>
        <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
        <control-input axis="/controls/flight/spoilers" control="SPOILER"/>

        <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
        <control-output control="SPOILER" prop="/surface-positions/spoiler-pos-norm" invert="true" />

        <control-speed control="SPOILER" transition-time="0.5"/>
  </wing>
   
  <hstab x="-4.012" y="1.236" z="-0.726"
         chord="9.665"
         length="6"
         taper="0.15"
         sweep="40"
         camber="0.01">
         <stall aoa="18" width="2" peak="1.3"/>
         <flap0 start="0.6" end="0.95" lift="1.37" drag="1.2"/>

         <control-input axis="/controls/flight/aileron" control="FLAP0" split="true" src0="-0.5" src1="0.5" dst0="-0.9" dst1="0.9"/>
         <control-input axis="/controls/flight/aileron-trim" control="FLAP0" split="true"/>

         <control-output control="FLAP0" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
         <control-output control="FLAP0" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </hstab>

  <vstab x="-7.792" y="0" z="0.304"
         chord="5.853"
         length="3.8"
         taper="0.30"
         sweep="52">
         <stall aoa="16" width="2" peak="1.5"/>
         <flap0 start="0.183" end="0.779" lift="1.5" drag="1.3"/>

         <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
  </vstab>

  <!-- Engines   source            : http://en.wikipedia.org/wiki/SNECMA_Atar

                 name              : SNECMA Atar
                 type              : Afterburning turbojet
                 power cruise      :  9440 lbf
                 afterburner       : 13240 lbf
                 weight            : 1456 kg (3210 lb)
  -->
  <jet x="-2.061" y="0.800" z="-0.690"
       mass="3310"
       thrust="9440"
       afterburner="13240"
       egt="935"
       spool-time="5">
       <actionpt x="-10.571" y="0.629" z="-0.310"/>
       <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
       <control-input axis="/controls/engines/engine[0]/reheat" control="REHEAT"/>
       <control-speed control="THROTTLE" transition-time="2.0"/>
       <control-speed control="REHEAT" transition-time="2.0"/>
  </jet>

  <jet x="-2.061" y="-0.800" z="-0.690"
       mass="3210"
       thrust="9440"
       afterburner="13240"
       egt="935"
       spool-time="5">
       <actionpt x="-10.571" y="-0.629" z="-0.310"/>
       <control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
       <control-input axis="/controls/engines/engine[1]/reheat" control="REHEAT"/>
       <control-speed control="THROTTLE" transition-time="2.0"/>
       <control-speed control="REHEAT" transition-time="2.0"/>
  </jet>

  <!-- Roues avants -->
  <gear x="3.714" y="0" z="-2.655"
        retract-time="7"
        compression="0.2"
        spring="1.1"
        damp="1.4">
        <control-input axis="/controls/flight/rudder" control="STEER" src0="-1.0" src1="1.0" dst0="-0.2" dst1="0.2"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>

        <control-speed control="EXTEND" transition-time="7"/>
  </gear>

  <!-- Roues gauches x -3.893-->
  <gear x="-4.893" y="2.570" z="-2.444"
        retract-time="7"
        compression="0.2"
        spring="0.85"
        damp="2">

        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

        <control-speed control="EXTEND" transition-time="7"/>

        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
  </gear>

  <!-- Roues droites x -3.893 -->
  <gear x="-4.893" y="-2.570" z="-2.444"
        retract-time="7"
        compression="0.2"
        spring="0.85"
        damp="2">

        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

        <control-speed control="EXTEND" transition-time="7"/>

        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
  </gear>
  <!--Pour test des animations des trains
  <gear x="3.714" y="0" z="-4.655">
  </gear>
  <gear x="-5.893" y="2.570" z="-4.444">
  </gear>
  <gear x="-5.893" y="-2.570" z="-4.444">
  </gear>
  -->

  <tank x="-3.500" y=" 2.510" z="-0.716" jet="true" capacity="1650"/>
  <tank x="-3.500" y=" 0.000" z="-0.247" jet="true" capacity="650"/>
  <tank x="-3.500" y="-2.510" z="-0.716" jet="true" capacity="1650"/>
<!--
  <ballast x="12" y="0" z="-4" mass="1500"/>
  <ballast x="-8" y="0" z="2" mass="-1000"/>
-->
</airplane>
